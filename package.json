{
  "name": "derivio-cal-lib",
  "version": "0.1.0",
  "description": "calculating library for the frontend project",
  "repository": "git@github.com:raindexv/derivio-cal-lib.git",
  "keywords": [
    "lib"
  ],
  "homepage": "https://github.com/raindexv/derivio-cal-lib",
  "bugs": {
    "url": "https://github.com/raindexv/derivio-cal-lib/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "chalk": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "fs-extra": "^11.1.1",
    "git-cz": "^4.9.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "inquirer": "^9.1.5",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "lodash": "^4.17.21",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.ts": [
      "prettier --write --ignore-unknown"
    ],
    "test/**/*.js": [
      "prettier --write --ignore-unknown"
    ],
    "test/**/*.ts": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "c": "npm run commit",
    "commit": "git add . && git status && git-cz",
    "prepare": "husky install",
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "rimraf dist && webpack --mode production",
    "dev": "webpack --watch --mode development",
    "ci": "npm run lint && npm run build",
    "release": "npm run build && gulp && git push",
    "version": "gulp customizeVersion"
  }
}

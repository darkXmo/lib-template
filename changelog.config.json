{
  "disableEmoji": false,
  "format": "{type}{scope}: {emoji}{subject}",
  "list": ["feat", "fix", "chore", "docs", "style", "refactor"],
  "maxMessageLength": 64,
  "minMessageLength": 3,
  "questions": ["type", "scope", "subject", "body"],
  "scopes": ["framework", "configuration", "others"],
  "types": {
    "feat": {
      "description": "add/mod function",
      "emoji": "🎸",
      "value": "feat"
    },
    "chore": {
      "emoji": "🤖",
      "description": "dependencies/tools",
      "value": "chore"
    },
    "fix": { "description": "bug fix", "emoji": "🐛", "value": "fix" },
    "docs": { "description": "doc/comments", "emoji": "✏️", "value": "docs" },
    "style": {
      "description": "code format/clean",
      "emoji": "💄",
      "value": "style"
    },
    "refactor": {
      "description": "rebuild code",
      "emoji": "💡",
      "value": "refactor"
    },
    "test": { "description": "add/mod test", "emoji": "💍", "value": "test" }
  }
}
